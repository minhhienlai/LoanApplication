@using LoanAppMVC.Client.LoanApiRequestDto
@using LoanAppMVC.Models
@model LoanAppRequestDto
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LoanAppModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayBackInMonths" class="control-label"></label>
                <input asp-for="PayBackInMonths" class="form-control" />
                <span asp-validation-for="PayBackInMonths" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="APRPercent" class="control-label"></label>
                <input asp-for="APRPercent" readonly="readonly" class="form-control" />
                <span asp-validation-for="APRPercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateSubmitted" class="control-label"></label>
                <input asp-for="DateSubmitted" class="form-control" />
                <span asp-validation-for="DateSubmitted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="BusinessId" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List" asp-route-businessId="@Model.BusinessId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
