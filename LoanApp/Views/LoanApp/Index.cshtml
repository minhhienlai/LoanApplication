@using SharedClassLibrary.Models
@model IEnumerable<LoanAppModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@{
    var businessId = ViewData["BusinessId"];
}
<p>
    <a asp-action="Create" asp-route-businessId="@businessId">Create New </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayBackInMonths)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.APRPercent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreditScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LatePaymentRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalDebt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RiskRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateSubmitted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateProcessed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayBackInMonths)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.APRPercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreditScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LatePaymentRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalDebt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RiskRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSubmitted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateProcessed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" asp-route-businessId="@businessId" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-controller="List">Back to List</a>
</div>
